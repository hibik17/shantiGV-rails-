<!DOCTYPE html>
<html>
  <head>
    <title>GVApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="pusher">
      <div class="ui inverted vertical masthead center aligned segment">
        <div class="ui container">
          <div class="ui large secondary inverted pointing menu">
            <a class="item header_item">Home</a>
            <a class="item header_item">Posts</a>
            <a class="item header_item">Countries</a>
            <a class="item header_item">Genres</a>
            <div class="right item">
              <% if user_signed_in? %>
                <i class="search icon"></i>
                <input type="text" placeholder="Search...">
                <button class="ui Orange Mini search_button">Search</button>
              <% else %>
                <a class="ui inverted button">Log in</a>
                <a class="ui inverted button" style="margin-left: 20px;">Sign Up</a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= yield %>
    <div class="ui footer center aligned horizontal divider">
      <div class="ui grid">
        <div class="eight column  position: absolute; bottom: 0; ">&copy; shanti shanti</div>
      </div>
    </div>
  </body>
</html>
