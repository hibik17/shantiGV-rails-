<!DOCTYPE html>
<html>
  <head>
    <title>GVApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="pusher">
      <div class="ui inverted vertical masthead center aligned segment">
        <div class="ui container">
          <div class="ui large secondary inverted pointing menu">
            <a class="item header_item">Home</a>
            <a class="item header_item">Posts</a>
            <a class="item header_item">Countries</a>
            <a class="item header_item">Genres</a>
            <div class="right item">
              <% if user_signed_in? %>
                <a class="ui inverted button">Log in</a>
                <a class="ui inverted button">Sign Up</a>
              <% else %>
                  <i class="search icon"></i>
                  <input type="text" placeholder="Search...">
                  <button class="ui Orange Mini search_button">Search</button>
              <% end %>
            </div>
          </div>
      </div>
    </div>
    <%= yield %>
    <%# <footer class="ui inverted vertical segment">
      <a href="#">shianti instagram</a>
    </footer> %>
  </body>
</html>
