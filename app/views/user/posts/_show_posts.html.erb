<div class="ui three cards">
  <% if posts.count >= 1 %>
    <% posts.each do |post| %>
      <div class="ui card">
        <div class="content">
          <div class="right floated meta"><%= post.created_at.strftime('%Y/%m/%d') %></div>
          <%= attachment_image_tag post.user, :profile_image, fallback: 'noimage', class: 'ui avatar' %>
          <%= post.post_user %>
        </div>
        <div class="image">
          <%= attachment_image_tag post, :image, fallback: 'nopost_image' %>
        </div>
        <div class="content">
          <span class="right floated">
            <%= render 'user/favorites/favorites', post: post %>
          </span>
          <i class="comment icon"></i>
          <%= post.post_comments.count%>
        </div>
        <div class="extra content">
          <div class="ui large transparent left icon">
            <%= link_to  user_post_path(post.id) do %>
              <p>Add Comment...</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="ui center aligned text container" style="margin-top: 250px; margin-bottom: 250px;">
      <h1 class="ui red">いいねされた記事がありません。</h1>
      <span>いいねを押しにいきましょう!<%= link_to "投稿一覧", user_posts_path, class: 'ui button red', style: 'margin-left: 15px;' %></span>
    </div>
  <% end %>
</div>