<div class="ui form center aligned ">
  <%= form_with model: post, url: user_posts_path, local:true do |f| %>
    <div class="field"  style="margin-top: 30px;">
      <%= f.label :genre %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :country %>
      <%= f.collection_select :country_id, Country.all, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.attachment_field :image %>
    </div>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
    <div class="field" style="margin-bottom: 10px;">
      <%= f.submit "作成", class: 'ui button orange', style: 'margin-top: 20px; margin-left: 500px;' %>
    </div>
  <% end %>
</div>