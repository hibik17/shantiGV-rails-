<div class="ui text container">
  <div class="ui form center aligned ">
    <h4 class="ui horizontal inverted divider" style="margin-top: 80px; color: black;">ユーザー編集画面</h4>
    <% if @user.errors.any? %>
      <div class="ui warning message" style="margin-top: 50px;">
        <div class="alert">
          <h1 class="header"><%= @user.errors.count %>件のエラーが発生しています</h1>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            <% if @nick_name_active == false %>
              <li>
                ニックネームが登録されておりません。もしニックネームを使用する場合は登録しましょう
                <%= link_to "登録する", edit_user_user_path(current_user.id), class: 'ui button red' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <%= form_with model: @user, url: user_user_path(@user.id), method: :patch, local:true do |f| %>
      <div class="field" style="margin-top: 30px;">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :nick_name %>
        <%= f.text_field :nick_name %>
      </div>
      <div class="field">
        <%= f.label :profile_image %>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="field">
        <%= f.label :profile %>
        <%= f.text_area :profile %>
      </div>
      <div class="field" style="margin-bottom: 70px;">
        <%= f.submit class: 'ui button orange', style: 'margin-top: 20px; margin-left: 300px;' %>
      </div>
    <% end %>
  </div>
</div>